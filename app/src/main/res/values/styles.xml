<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainRadioButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_five</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/main_rb_background_selector</item>
    </style>

    <style name="ItemLayoutStyle">
        <item name="android:layout_marginBottom">@dimen/padding_one</item>
        <item name="android:background">@drawable/item_layout_bg_selector</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_five</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
