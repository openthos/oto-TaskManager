<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/padding_ten</item>
        <item name="android:paddingRight">@dimen/padding_ten</item>
    </style>

    <style name="ItemLayoutStyle">
        <item name="android:layout_marginBottom">@dimen/padding_one</item>
        <item name="android:background">@drawable/item_layout_bg_selector</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_five</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MenuDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
